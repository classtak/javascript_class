<!-- index.html.erb -->
<h1>여기는 INDEX 입니다.</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>글번호</th>
      <th>제목</th>
      <th>보기</th>
      <th>수정</th>
      <th>삭제</th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
    <tr>
      <td><%= board.id %></td>
      <td><%= board.title %></td>
      <td><a href="/boards/<%= board.id %>">보기</a></td>
      <td><a href="/boards/<%= board.id %>/edit">수정</a></td>
      <td><a href="/boards/<%= board.id %>" data-method="delete" data-confirm="삭제할꼬얌?">삭제</a></td>
    </tr>
    <% end %>
  </tbody>
</table>

<a href="/boards/new" class="btn btn-danger">새글쓰기</a>
